#include <stdio.h>
#define MAX 20
int adj[MAX][MAX], visited[MAX];
int queue[MAX], front = 0, rear = -1;
void createGraph(int n)
{
int i, j;
printf("\nEnter adjacency matrix (%d x %d):\n", n, n);
for (i = 0; i < n; i++)
{
for (j = 0; j < n; j++)
{
printf("Is there an edge from %d to %d (0/1)? ", i, j);
scanf("%d", &adj[i][j]);
}
}
}
void BFS(int start, int n)
{
int i;
for (i = 0; i < n; i++)
visited[i] = 0;
queue[++rear] = start;
visited[start] = 1;
printf("\nNodes reachable from %d using BFS: ", start);
while (front <= rear)
{
int node = queue[front++];
printf("%d ", node);
for (i = 0; i < n; i++)
{
if (adj[node][i] == 1 && visited[i] == 0)
{
queue[++rear] = i;
visited[i] = 1;
}
}
}
}
void DFSUtil(int node, int n)
{
int i;
visited[node] = 1;
printf("%d ", node);
for (i = 0; i < n; i++)
{
if (adj[node][i] == 1 && visited[i] == 0)
DFSUtil(i, n);
}
}
void DFS(int start, int n)
{
int i;
for (i = 0; i < n; i++)
visited[i] = 0;
printf("\nNodes reachable from %d using DFS: ", start);
DFSUtil(start, n);
}
int main()
{
int n, start;
printf("Enter number of cities: ");
scanf("%d", &n);
createGraph(n);
printf("\nEnter starting city for BFS and DFS: ");
scanf("%d", &start);
BFS(start, n);
DFS(start, n);
printf("\n");
return 0;
}
