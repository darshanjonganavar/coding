#include <stdio.h>
#include <stdlib.h>

struct node {
    int data;
    struct node *next;
};
struct node *head = NULL;

void insert_front() {
    struct node *new = malloc(sizeof(struct node));
    printf("Enter data: ");
    scanf("%d", &new->data);
    new->next = head;
    head = new;
}

void delete_rear() {
    struct node *temp = head, *prev = NULL;
    if(head == NULL) return;
    while(temp->next != NULL) {
        prev = temp;
        temp = temp->next;
    }
    free(temp);
    if(prev) prev->next = NULL;
    else head = NULL;
}

void display() {
    struct node *temp = head;
    while(temp) {
        printf("%d ", temp->data);
        temp = temp->next;
    }
}

int main() {
    int ch;
    do {
        printf("\n1.Insert Front\n2.Delete Rear\n3.Display\n4.Exit\n");
        scanf("%d", &ch);
        switch(ch) {
            case 1: insert_front(); break;
            case 2: delete_rear(); break;
            case 3: display(); break;
        }
    } while(ch != 4);
    return 0;
}
