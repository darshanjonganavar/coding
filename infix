#include <stdio.h>
#include <ctype.h>
char stack[20];
int top = -1;
void push(char x) { stack[++top] = x; }
char pop() { return stack[top--]; }
int priority(char x) {
    if(x=='+'||x=='-') return 1;
    if(x=='*'||x=='/'||x=='%') return 2;
    return 0;
}
int main() {
    char infix[20], postfix[20];
    int i, k = 0;
    char ch;
    printf("Enter infix expression: ");
    scanf("%s", infix);
    for(i = 0; infix[i] != '\0'; i++) {
        ch = infix[i];
        if(isalnum(ch))
            postfix[k++] = ch;
        else if(ch == '(')
            push(ch);
        else if(ch == ')') {
            while(stack[top] != '(')
                postfix[k++] = pop();
            pop();
        }
        else {
            while(top != -1 && priority(stack[top]) >= priority(ch))
                postfix[k++] = pop();
            push(ch);
        }
    }
    while(top != -1)
        postfix[k++] = pop();
    postfix[k] = '\0';
    printf("Postfix: %s\n", postfix);
    return 0;
}
